    "/api/transactions/{userId}": {
      "patch": {
        "tags": ["Transactions"],
        "summary": "Update balance",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": "true",
            "type": "string",
            "description": "User's Id"
          }
        ],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "Update balance object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateBalanceRequest"
              }
            }
